doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Panel de Paciente - #{paciente.nombre} #{paciente.apellido}
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css", rel="stylesheet")
    style.
      body {
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        overflow-x: hidden;
      }
      
      /* Fondo profesional pero con más profundidad */
      .panel-container {
        background: linear-gradient(145deg, #002448 0%, #0066b3 100%);
        min-height: 100vh;
        padding: 2rem 1rem;
        background-attachment: fixed;
      }
      
      /* Título más destacado pero conservando el estilo */
      .patient-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 2rem;
        color: #fff;
        text-shadow: 0 2px 8px rgba(0,0,0,0.3);
        background: rgba(255,255,255,0.12);
        padding: 1.5rem 2.5rem;
        border-radius: 18px;
        backdrop-filter: blur(6px);
        border: 1px solid rgba(255,255,255,0.15);
        text-align: center;
        max-width: 90%;
        transition: all 0.3s ease;
      }
      
      .patient-title:hover {
        background: rgba(255,255,255,0.18);
        transform: translateY(-2px);
      }
      
      /* Botones más consistentes con mejor feedback */
      .btn-panel {
        font-size: 1.3rem;
        padding: 1.4rem 2rem;
        border-radius: 14px;
        min-width: 270px;
        margin: 0.7rem;
        transition: all 0.25s ease-out;
        box-shadow: 0 5px 15px rgba(0,0,0,0.12);
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        border: none;
        position: relative;
        overflow: hidden;
      }
      
      .btn-panel i {
        font-size: 1.7rem;
        margin-right: 15px;
        transition: transform 0.3s ease;
      }
      
      .btn-panel:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
      }
      
      .btn-panel:hover i {
        transform: scale(1.1);
      }
      
      /* Efecto sutil al hacer clic */
      .btn-panel:active {
        transform: translateY(-1px);
      }
      
      /* Colores originales pero optimizados */
      .btn-delete {
        background: #e74c3c;
        color: white;
      }
      
      .btn-medical {
        background: #2ecc71;
        color: white;
      }
      
      .btn-appointment {
        background: #3498db;
        color: white;
      }
      
      /* Botón de home más integrado */
      .home-btn {
        position: fixed;
        top: 25px;
        left: 25px;
        background-color: rgba(255,255,255,0.95);
        color: #2c3e50;
        border: none;
        border-radius: 50%;
        width: 52px;
        height: 52px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        box-shadow: 0 3px 10px rgba(0,0,0,0.15);
        transition: all 0.25s ease;
        z-index: 1000;
      }
      
      .home-btn:hover {
        transform: scale(1.08) rotate(5deg);
        background-color: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      }
      
      /* Contenedor de botones más pulido */
      .buttons-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(290px, 1fr));
        gap: 1.8rem;
        width: 100%;
        max-width: 1100px;
        padding: 1.5rem;
      }
      
      /* Responsive mejorado */
      @media (max-width: 768px) {
        .patient-title {
          font-size: 2rem;
          padding: 1.2rem 1.8rem;
          margin-bottom: 1.8rem;
        }
        
        .btn-panel {
          font-size: 1.2rem;
          padding: 1.2rem 1.8rem;
          min-width: 240px;
          justify-content: center;
        }
        
        .buttons-container {
          grid-template-columns: 1fr;
          gap: 1.2rem;
          padding: 0.8rem;
        }
        
        .home-btn {
          width: 46px;
          height: 46px;
          font-size: 1.2rem;
        }
      }

  body
    include ../../layout/alerts.pug
    .panel-container.d-flex.flex-column.justify-content-center.align-items-center
      a.home-btn(href="/medicos/view/paciente/seleccionado" aria-label="Volver al inicio")
        i.bi.bi-house-door-fill
      
      .text-center.mb-4
        h1.patient-title 
          | #{paciente.nombre} #{paciente.apellido}
          small.d-block.mt-2(style="font-size: 1.1rem; font-weight: 400; opacity: 0.9") Panel de Alta Medica
      
      .buttons-container
        a.btn.btn-panel.btn-delete(href=`/medicos/view/lista/recetas/medicas` role="button")
          i.bi.bi-file-medical
          | Recetas Médicas
        
        a.btn.btn-panel.btn-medical(href=`/medicos/view/indicaciones` role="button")
          i.bi.bi-heart-pulse
          | Indicaciones Clínicas
        
        a.btn.btn-panel.btn-appointment(href="/medicos/view/seccion/alta/paciente" role="button")
          i.bi.bi-hospital
          | Alta Hospitalaria

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script.
      // Efecto de carga más sutil
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelector('.panel-container').style.opacity = '0';
        document.querySelector('.panel-container').style.transition = 'opacity 0.4s ease';
        
        setTimeout(() => {
          document.querySelector('.panel-container').style.opacity = '1';
          
          // Efecto escalonado para los botones
          const buttons = document.querySelectorAll('.btn-panel');
          buttons.forEach((btn, index) => {
            btn.style.transform = 'translateY(10px)';
            btn.style.opacity = '0';
            btn.style.transition = `all 0.3s ease ${index * 0.1}s`;
            
            setTimeout(() => {
              btn.style.transform = 'translateY(0)';
              btn.style.opacity = '1';
            }, 100 + (index * 100));
          });
        }, 50);
      });