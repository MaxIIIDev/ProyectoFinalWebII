doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Gestión de Diagnósticos
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css", rel="stylesheet")
        style.
            :root {
                --primary-gradient: linear-gradient(135deg, #4e0f06 0%, #ca1009 100%);
                --secondary-gradient: linear-gradient(135deg,rgb(0, 0, 0) 0%,rgb(67, 1, 1) 100%);
                --card-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
                --element-shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
            }
            
            body {
                background: var(--secondary-gradient);
                min-height: 100vh;
                font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
                color: #333;
            }
            
            .main-container {
                max-width: 1600px;
                margin: 2rem auto;
                padding: 0 1.5rem;
            }
            
            .card {
                margin-top: 3rem;
                border: none;
                border-radius: 16px;
                box-shadow: var(--card-shadow);
                overflow: hidden;
                background: #fff;
                transition: transform 0.3s ease;
            }
            
            .card:hover {
                transform: translateY(-5px);
            }
            
            .card-header {
                background: var(--primary-gradient);
                color: white;
                padding: 1.75rem 2rem;
                border-bottom: none;
                position: relative;
            }
            
            .card-header::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background: rgba(255, 255, 255, 0.2);
            }
            
            .card-title {
                font-weight: 700;
                margin: 0;
                font-size: 2rem;
                letter-spacing: -0.5px;
                display: flex;
                align-items: center;
            }
            
            .card-title i {
                margin-right: 12px;
                font-size: 1.8rem;
            }
            
            .table-responsive {
                border-radius: 12px;
                overflow: hidden;
            }
            
            .table {
                margin-bottom: 0;
            }
            
            .table thead th {
                background-color: #f8f9fa;
                color: #495057;
                font-weight: 600;
                padding: 1.25rem 1.5rem;
                border: none;
                text-transform: uppercase;
                font-size: 0.85rem;
                letter-spacing: 0.5px;
                vertical-align: middle;
            }
            
            .table tbody td {
                padding: 1.25rem 1.5rem;
                background: #fff;
                border: none;
                vertical-align: middle;
                position: relative;
                transition: all 0.2s ease;
            }
            
            .table tbody tr {
                transition: all 0.2s ease;
            }
            
            .table tbody tr:not(:last-child) td {
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            }
            
            .table tbody tr:hover td {
                background-color: #f8faff;
                transform: translateX(4px);
            }
            
            .table tbody tr:hover td::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 4px;
                
            }
            
            .btn-add {
                background: var(--primary-gradient);
                color: white;
                border: none;
                border-radius: 8px;
                padding: 0.6rem 1.25rem;
                font-weight: 500;
                margin-bottom: 1.5rem;
                transition: all 0.3s ease;
                box-shadow: var(--element-shadow);
            }
            
            .btn-add:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(202, 16, 9, 0.2);
                color: white;
            }
            
            .btn-add i {
                margin-right: 8px;
            }
            
            .btn-action {
                padding: 0.5rem 0.9rem;
                border-radius: 8px;
                font-size: 0.85rem;
                font-weight: 500;
                transition: all 0.2s;
                margin: 0 3px;
                border: none;
                box-shadow: var(--element-shadow);
            }
            
            .btn-view {
                background-color: #e3f2fd;
                color: #1976d2;
            }
            
            .btn-tratamiento {
                background-color: #e8f5e9;
                color: #2e7d32;
            }
            
            .btn-edit {
                background-color: #fff8e1;
                color: #ff8f00;
            }
            
            .btn-delete {
                background-color: #ffebee;
                color: #d32f2f;
            }
            
            .btn-action:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
            
            .btn-action i {
                margin-right: 5px;
            }
            
            .home-btn {
                position: fixed;
                top: 25px;
                left: 25px;
                background-color: white;
                color: #0066cc;
                border: none;
                border-radius: 50%;
                width: 50px;
                height: 50px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.25rem;
                box-shadow: var(--element-shadow);
                transition: all 0.3s ease;
                z-index: 1000;
            }
            
            .home-btn:hover {
                transform: scale(1.1) rotate(5deg);
                background-color: #f0f7ff;
                color: #004080;
            }

    body    
        include ../../../layout/alerts.pug  
        if(validado) 
            a.home-btn(href="/medicos/view/seccion/alta/paciente") 
                i.bi.bi-house-door-fill
        else
            a.home-btn(href="/medicos/view/lista/recetas/medicas") 
                i.bi.bi-house-door-fill
        .main-container
            .card
                .card-header
                    h1.card-title 
                        i.bi.bi-clipboard2-pulse
                        | Recetas del Paciente
                
                .card-body
                    if(validado)
                        a.btn.btn-add(href="/medicos/crear/receta")
                            i.bi.bi-plus-lg
                            | Nueva Receta
                        a.btn.btn-add.ms-2(href=`/medicos/view/alta/historial/recetas` title="Ver todos las Recetas")
                            i.bi.bi-clock-history
                            | Ver Historial Completo
                    
                    .table-responsive
                        table.table
                            thead
                                tr
                                    th Fecha
                                    th Medico
                                    th Acciones
                                    
                            tbody
                                if recetas != undefined
                                    each receta of recetas
                                        tr
                                            td= new Date(receta.dataValues.fecha).toISOString().split("T")[0]
                                            td= receta.dataValues.medico.dataValues.nombre + " " + receta.dataValues.medico.dataValues.apellido + " - " + receta.dataValues.medico.dataValues.especialidad.dataValues.nombre
                                            
                                            td
                                                - let visibilidad = receta.dataValues.id_medico == medicoActual ? true : false
                                                .d-flex
                                                    a.btn.btn-action.btn-view(href=`/medicos/view/alta/receta/medicamentos?id_Receta=${receta.dataValues.id_Receta}&visibilidad=${visibilidad}` role="button")
                                                        i.bi.bi-eye
                                                        | Ver Receta
                                                    if(receta.dataValues.id_medico == medicoActual && validado)
                                                        a.btn.btn-action.btn-delete(href=`/medicos/eliminar/receta?id_Receta=${receta.dataValues.id_Receta}` role="button")
                                                            i.bi.bi-trash
                                                            | Eliminar
                                            

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")