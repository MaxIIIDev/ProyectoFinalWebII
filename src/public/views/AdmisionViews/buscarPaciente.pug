doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Buscar Paciente
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css", rel="stylesheet")
        style.
            body {
                background: linear-gradient(135deg, rgb(0, 9, 18) 0%, rgba(26, 26, 26, 0.73) 100%);
                min-height: 100vh;
            }
            .search-container {
                background: white;
                border-radius: 15px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
                padding: 2.5rem;
                max-width: 520px;
                margin: 9rem
            }
            .search-title {
                color:rgb(1, 15, 30);
                font-weight: 700;
                margin-bottom: 2rem;
                text-align: center;
            }
            .search-icon {
                font-size: 3rem;
                color: rgb(0, 0, 0);
            }
            .form-control {
                padding: 1rem 1.5rem;
                font-size: 1.1rem;
                border-radius: 50px;
                border: 2px solid #e0e0e0;
            }
            .form-control:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
            }
            .btn-search {
                background:rgb(0, 5, 8);
                color: white;
                border: none;
                border-radius: 50px;
                padding: 0.75rem 2rem;
                font-weight: 600;
                transition: all 0.3s;
            }
            .btn-search:hover {
                background: rgba(3, 129, 255, 0.94);
                transform: translateY(-2px);
            }
            .input-group-text {
                background: transparent;
                border-right: none;
                border-radius: 50px 0 0 50px !important;
            }
            .form-control {
                border-left: none;
                border-radius: 0 50px 50px 0 !important;
            }
            .is-invalid {
                border-color: #dc3545 !important;
            }
            .invalid-feedback {
                color: #dc3545;
                margin-top: 0.5rem;
                font-size: 0.9rem;
            }
        include ../mixin/mixins
    
    body
        .container-fluid.d-flex.align-items-center.justify-content-center.flex-column
            .search-container
                h1.search-title.mb-4
                    i.bi.bi-search-heart.search-icon.me-2
                    | Buscar Paciente
                
                form(action="/find", method="GET" id="searchForm" novalidate)
                    .input-group.mb-3
                        span.input-group-text.bg-white
                            i.bi.bi-person-badge
                        input#dni.form-control(
                            type="text" 
                            name="dni" 
                            placeholder="Ingrese el DNI del paciente" 
                            aria-label="DNI" 
                            pattern="[0-9]{8}" 
                            title="El DNI debe contener 8 dígitos numéricos"
                            required
                        )
                    .mb-4
                        .invalid-feedback#dniError Por favor ingrese un DNI válido (8 dígitos)
                    
                    .d-grid
                        button.btn.btn-search.btn-lg(type="submit")
                            i.bi.bi-search.me-2
                            | Buscar

    script.
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('searchForm');
            const dniInput = document.getElementById('dni');
            const dniError = document.getElementById('dniError');

           
            dniInput.addEventListener('input', function() {
                if (this.validity.valid) {
                    this.classList.remove('is-invalid');
                    dniError.style.display = 'none';
                } else {
                    this.classList.add('is-invalid');
                    dniError.style.display = 'block';
                }
            });

            
            form.addEventListener('submit', function(event) {
                if (!dniInput.validity.valid) {
                    event.preventDefault();
                    dniInput.classList.add('is-invalid');
                    dniError.style.display = 'block';
                    
                    // Enfocar el campo con error
                    dniInput.focus();
                }
            });

       
            dniInput.addEventListener('blur', function() {
                if (!this.validity.valid) {
                    this.classList.add('is-invalid');
                    dniError.style.display = 'block';
                }
            });
        });

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")