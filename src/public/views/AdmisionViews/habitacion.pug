doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sistema de Habitaciones
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css", rel="stylesheet")
    include ../mixin/mixins
    style.
      .principal-panel {
        background: linear-gradient(135deg, #05f479 0%, #0837b0 100%);
        min-height: 100vh;
      }
      .habitacion-card {
        width: 100%;
        max-width: 450px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .habitacion-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
      }
      .info-box {
        border: 2px solid rgba(57, 57, 57, 0);
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 10px;
      }
      .home-btn {
        position: absolute;
        top: 20px;
        left: 20px;
        background-color: white;
        color:rgb(2, 0, 0);
        border: none;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
      }
      .home-btn:hover {
          transform: scale(1.1);
          background-color: #f8f9fa;
      }

  body
    include ../layout/alerts.pug
    .principal-panel.d-flex.align-items-center.justify-content-center.p-4
      a.home-btn(href="/admision") 
                i.bi.bi-house-door-fill
      .habitacion-card.bg-white.text-center.p-4
        h1.text-primary.mb-4
          i.bi.bi-building.me-2
          | Información de Habitación
        
        +agregarHabitacionSeleccionada(nombre_ala,nro_habitacion,id_Paciente)
        

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")