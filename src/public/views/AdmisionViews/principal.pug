doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Panel de Control
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css", rel="stylesheet")
    style.
      .btn-panel {
        font-size: 1.8rem;
        padding: 1.5rem 3rem;
        border-radius: 50px;
        min-width: 280px;
        margin: 1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      }
      .btn-panel:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
      }
      .welcome-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 4rem;
        color: #fff;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
      }
      .panel-container {
        background: linear-gradient(135deg,rgb(0, 36, 72) 0%, #3498db 100%);
        min-height: 100vh;
      }
      .buttons-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        width: 100%;
        max-width: 1200px;
        justify-items: center;
      }

  body
    include ../layout/alerts.pug
    .panel-container.d-flex.flex-column.justify-content-center.align-items-center.p-4
      h1.welcome-title Bienvenido al Sistema
      
      .buttons-container
        a.btn.btn-panel.btn-danger(href="/admision/emergencia" role="button")
          i.bi.bi-exclamation-triangle-fill.me-3
          | EMERGENCIA
        a.btn.btn-panel.btn-warning(href="/normal" role="button")
           i.bi.bi-check-circle-fill.me-3
           | TURNOS
        a.btn.btn-panel.btn-success(href="/admision/find" role="button")
          i.bi.bi-people-fill.me-3
          | PACIENTES
        //- a.btn.btn-panel.btn-info(href="/admisiones" role="button")
        //-   i.bi.bi-clipboard2-plus-fill.me-3
        //-   | ADMISIONES
        

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")