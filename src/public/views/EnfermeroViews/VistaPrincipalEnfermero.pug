doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Panel de Control
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css", rel="stylesheet")
    style.
      .btn-panel {
        font-size: 1.8rem;
        padding: 1.5rem 3rem;
        border-radius: 50px;
        min-width: 280px;
        margin: 1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      }
      .btn-panel:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
      }
      .welcome-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #fff;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        background: linear-gradient(90deg, #ffffff 0%, #a7d8ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        padding-bottom: 0.5rem;
      }
      .welcome-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, rgba(255,255,255,0) 0%, #ffffff 50%, rgba(255,255,255,0) 100%);
      }
      .user-info {
        font-size: 1.8rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: #fff;
        text-shadow: 0 1px 2px rgba(0,0,0,0.2);
        display: flex;
        align-items: center;
      }
      .user-info i {
        margin-right: 1rem;
        font-size: 1.5rem;
        color: #a7d8ff;
      }
      .panel-container {
        background: linear-gradient(135deg, rgb(0, 36, 72) 0%, #3498db 100%);
        min-height: 100vh;
        padding: 2rem 0;
        position: relative;
      }
      .buttons-container {
        display: flex;
        justify-content: center;
        width: 100%;
        max-width: 1200px;
      }
      .user-info-container {
        background: rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 15px;
        padding: 1.5rem 2rem;
        margin-bottom: 3rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      }
      .logout-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        padding: 0.5rem 1.5rem;
        font-size: 1rem;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        backdrop-filter: blur(5px);
      }
      .logout-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      }
      .logout-btn i {
        margin-right: 8px;
      }
      .btn-comenzar {
        background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
        color: white;
        border: none;
      }

  body
    include ../layout/alerts.pug
    .panel-container.d-flex.flex-column.justify-content-center.align-items-center.p-4
      // Bot贸n de Cerrar Sesi贸n (posici贸n absoluta)
      a.logout-btn(href="/admision/logout" role="button")
        i.bi.bi-box-arrow-right
        | Cerrar Sesi贸n
      
      .d-flex.flex-column.align-items-center.text-center.mb-5
        h1.welcome-title Bienvenido al Panel de Control
      
      .user-info-container.mb-5
        .user-info
          i.bi.bi-person-circle
          span Nombre: #{enfermero.nombre} #{enfermero.apellido}
        .user-info
          i.bi.bi-shield-check
          span Rol: #{enfermero.nombre_Rol}
      
      .buttons-container
        button.btn.btn-panel.btn-comenzar(type="button" onclick="window.location.href='/enfermeria/view/lista/admisiones'")
          i.bi.bi-play-fill.me-3
          | Comenzar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")