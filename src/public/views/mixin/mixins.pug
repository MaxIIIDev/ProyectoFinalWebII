mixin agregarAlasDesdeDb(alas)
    for ala of alas 
        option(value=ala.nombre)  #{ala.nombre}

mixin agregarMotivosDesdeDb(motivos)
    for motivo of motivos
        option(
            value=motivo.dataValues.id_motivo_de_Internacion
        ) #{motivo.dataValues.motivo}

